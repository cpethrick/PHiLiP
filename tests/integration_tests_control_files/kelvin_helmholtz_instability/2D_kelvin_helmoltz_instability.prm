# Listing of Parameters
# ---------------------
# Number of dimensions

set dimension = 2 
set run_type = flow_simulation
set pde_type = euler

# DG formulation
set use_weak_form = false
set use_split_form = true
set use_collocated_nodes = false

set flux_reconstruction = cDG
set use_inverse_mass_on_the_fly = true

set enable_higher_order_vtk_output = true

# Note: this was added to turn off check_same_coords() -- has no other function when dim!=1
set use_periodic_bc = true

# numerical fluxes
set conv_num_flux = two_point_flux_with_lax_friedrichs_dissipation
set two_point_num_flux_type = CH

# ODE solver
subsection ODE solver
  set ode_output = verbose 
  set ode_solver_type = runge_kutta 
  #set ode_solver_type = rrk_explicit
  set output_solution_every_x_steps = 3
  set runge_kutta_method = rk4_ex
end

subsection linear solver
  set linear_solver_output = quiet
end

# freestream Mach number
#subsection euler
  #set mach_infinity = 1.195228609334 #=sqrt(2/1.4)
#end

subsection flow_solver
  set flow_case_type = kelvin_helmholtz_instability
  set poly_degree = 7
  set final_time = 10
  set courant_friedrich_lewy_number = 0.05
  set unsteady_data_table_filename = isentropic_vortex_time_table
  subsection grid
    set grid_left_bound = -1.0
    set grid_right_bound = 1.0
    set number_of_grid_elements_per_dimension = 16
  end
  subsection kelvin_helmholtz_instability
    set atwood_number = 0.4
  end
end
