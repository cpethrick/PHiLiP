set test_type = burgers_energy_stability

set dimension = 1

set use_weak_form = false

set use_collocated_nodes = true

set use_split_form = true

set pde_type = burgers_inviscid

set conv_num_flux = split_form #entropy conservation
#set conv_num_flux = lax_friedrichs #entropy monotonically decrease

set use_periodic_bc = true

subsection ODE solver

  set ode_output = verbose
  
  set nonlinear_max_iterations = 500

  set print_iteration_modulo = 100

  set ode_solver_type = explicit

  #set initial_time_step = 0.00000001
  set initial_time_step = 0.003125

  subsection explicit solver options

    set runge_kutta_order = 3 

    set relaxation_runge_kutta = true

  end

end
