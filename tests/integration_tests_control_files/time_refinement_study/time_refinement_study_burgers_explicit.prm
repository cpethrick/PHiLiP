# Listing of Parameters
# ---------------------
# Number of dimensions

set dimension = 1 
set test_type = time_refinement_study_reference
set pde_type = burgers_inviscid


set use_weak_form = true

set use_collocated_nodes = false

# Note: this is required to correctly calculate energy
set use_periodic_bc = true

# ODE solver
subsection ODE solver
  set ode_solver_type = explicit
  set output_solution_every_dt_time_intervals = 0.01
  set initial_time_step = 0.000001 #2.5E-3
  subsection explicit solver options
    set runge_kutta_order = 3
    set relaxation_runge_kutta = true
  end
end

# polynomial order and number of cells per direction (i.e. grid_size)
subsection grid refinement study
  set poly_degree = 5 
  #set num_refinements = 5 #using grid_size instead
  set grid_size = 16 
  set grid_left = 0.0
  set grid_right = 2.0 
end

subsection flow_solver
  set flow_case_type = burgers_periodic
  set final_time = 0.1 
  set unsteady_data_table_filename = burgers_unsteady_data
  subsection time_refinement_study
    set number_of_times_to_solve = 1 #4 
    set refinement_ratio = 0.5
    set number_of_timesteps_for_reference_solution = 10 #10000
  end
end
